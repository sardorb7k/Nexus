<div class="d-flex align-items-center justify-content-center mt-5">
  <div class="card shadow p-4" style="width: 350px">
    <h3 class="text-center mb-3">Sign up</h3>
    <% if (alerts.error) { %>
    <div class="alert alert-danger mb-3" role="alert"><%= alerts.error %></div>
    <% } %>
    <form action="/auth/signup" method="POST">
      <div class="mb-2">
        <label for="text" class="fs-9">Username</label>
        <input
          type="text"
          class="form-control bg-black border"
          id="username"
          name="username"
          value="<%= alerts.oldUsername %>"
        />
      </div>
      <div class="mb-2">
        <label for="email" class="fs-9">Email</label>
        <input
          type="email"
          class="form-control bg-black border"
          id="email"
          name="email"
          value="<%= alerts.oldEmail %>"
        />
      </div>
      <div class="mb-2">
        <label for="password" class="fs-9">Password</label>
        <input
          type="password"
          class="form-control bg-black border"
          id="password"
          name="password"
        />
      </div>
      <div class="mb-3">
        <label for="password2" class="fs-9">Confirm password</label>
        <input
          type="password"
          class="form-control bg-black border"
          id="password2"
          name="password2"
        />
      </div>
      <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
      <button type="submit" class="btn btn-primary w-100">
        Create an account
      </button>
    </form>
    <p class="text-center mt-2 mb-0">
      <a href="/auth/signin">Already have an account?</a>
    </p>
  </div>
</div>
